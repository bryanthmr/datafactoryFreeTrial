{
	"name": "dataflowTransform",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "FilteredData",
						"type": "DatasetReference"
					},
					"name": "FilteredData"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "CreateColumns",
					"description": "Creation d'une colonne Mois , et ordername\n"
				},
				{
					"name": "RemoveColumns",
					"description": "suppression de order date time , first name et last name"
				},
				{
					"name": "AggregateColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id_orders as integer,",
				"          order_datetime as date,",
				"          id_product as integer,",
				"          quantity as integer,",
				"          product_name as string,",
				"          unit_price as float,",
				"          id_customer as integer,",
				"          {first name} as string,",
				"          {last name} as string,",
				"          age as integer,",
				"          groupe_client as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> FilteredData",
				"FilteredData derive(order_month = month(order_datetime),",
				"          order_name = concat({first name},' ',{last name}),",
				"          total_order = quantity * unit_price) ~> CreateColumns",
				"CreateColumns select(mapColumn(",
				"          id_orders,",
				"          order_month,",
				"          id_product,",
				"          quantity,",
				"          product_name,",
				"          unit_price,",
				"          id_customer,",
				"          order_name,",
				"          age,",
				"          groupe_client,",
				"          total_order",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RemoveColumns",
				"RemoveColumns aggregate() ~> AggregateColumns"
			]
		}
	}
}